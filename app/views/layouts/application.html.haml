                    %span.item-text Panels
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "portlets.html", :title => "Portlets"}
                    %span.item-text Portlets
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "maps.html", :title => "Maps"}
                    %span.item-text Maps
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "grid.html", :title => "Grid"}
                    %span.item-text Grid
