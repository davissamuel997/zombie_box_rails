                    %span.item-text Invoice
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "search.html", :title => "Search"}
                    %span.item-text Search
              / END SubMenu item
            / START Theme color options
            %li
              %a.has-submenu{"data-toggle" => "collapse-next", :href => "#", :title => "Color options"}
