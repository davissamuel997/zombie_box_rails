!!!
%html.no-ie{:lang => "en"}
  %head
    / Meta
    %base{:href => "/"}/
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0", :name => "viewport"}
        %meta{:content => "", :name => "description"}
          %meta{:content => "", :name => "keywords"}
            %meta{:content => "", :name => "author"}
              %title BeAdmin - Bootstrap Admin Theme
              = stylesheet_link_tag "jquery-ui-1.11.2.custom.css"
              = stylesheet_link_tag 'gritter/jquery.gritter.css'
              = stylesheet_link_tag "theme/theme.css"
              = stylesheet_link_tag "chosen.css"
  %body
    / START Main wrapper
    .wrapper
      / START Top Navbar
      %nav.navbar.navbar-default.navbar-top.navbar-fixed-top{:role => "navigation"}
        / START navbar header
        .navbar-header
          %a.navbar-brand{:href => "index.html"}
            .brand-logo
            .brand-logo-collapsed
        / END navbar header
        / START Nav wrapper
        .nav-wrapper
          / START Left navbar
          %ul.nav.navbar-nav
            %li
              / Button used to collapse the left sidebar. Only visible on tablet and desktops
              %a.hidden-xs{"data-toggle-state" => "aside-collapsed", :href => "#"}
                %em.fa.fa-navicon
              / Button to show/hide the sidebar on mobile. Visible on mobile only.
              %a.visible-xs{"data-toggle-state" => "aside-toggled", :href => "#"}
                %em.fa.fa-navicon
            / START Messages menu (dropdown-list)
            %li.dropdown.dropdown-list
              %a.dropdown-toggle{"data-play" => "flipInX", "data-toggle" => "dropdown", :href => "#"}
                %em.fa.fa-envelope
              / START Dropdown menu
              %ul.dropdown-menu
                %li.dropdown-menu-header Unread messages
                %li.p-sm
                  %input.form-control{:onfocus => "javascript:void(0);", :placeholder => "Find contacts..", :type => "text"}
                %li
                  .scroll-viewport
                    / START list group
                    .list-group.scroll-content
                      / START list group item
                      %a.list-group-item{:href => "#"}
                        .media
                          .pull-left
                          .media-body.clearfix
                            %small.pull-right 5m
                            %strong.media-heading.text-primary
                              %span.circle.circle-success.circle-md>
                              Greg Lewis
                            %p.mb-sm
                              %small Nunc vel dui et leo sagittis fringilla.
                      / END list group item
                      / START list group item
                      %a.list-group-item{:href => "#"}
                        .media
                          .pull-left
                          .media-body.clearfix
                            %small.pull-right 3h
                            %strong.media-heading.text-primary
                              %span.circle.circle-success.circle-md>
                              Constance Cook
                            %p.mb-sm
                              %small Nunc vel dui et leo sagittis fringilla.
                      / END list group item
                      / START list group item
                      %a.list-group-item{:href => "#"}
                        .media
                          .pull-left
                          .media-body.clearfix
                            %small.pull-right 3h
                            %strong.media-heading.text-primary
                              %span.circle.circle-danger.circle-md>
                              Cody Barnes
                            %p.mb-sm
                              %small Nunc vel dui et leo sagittis fringilla.
                      / END list group item
                      / START list group item
                      %a.list-group-item{:href => "#"}
                        .media
                          .pull-left
                          .media-body.clearfix
                            %small.pull-right 4h
                            %strong.media-heading.text-primary
                              %span.circle.circle-danger.circle-md>
                              Gina Robinson
                            %p.mb-sm
                              %small Nunc vel dui et leo sagittis fringilla.
                      / END list group item
                      / START list group item
                      %a.list-group-item{:href => "#"}
                        .media
                          .pull-left
                          .media-body.clearfix
                            %small.pull-right yesterday
                            %strong.media-heading.text-primary
                              %span.circle.circle-danger.circle-md>
                              Violet Olson
                            %p.mb-sm
                              %small Nunc vel dui et leo sagittis fringilla.
                      / END list group item
                    / END list group
                / START dropdown footer
                %li.p
                  %a.text-center{:href => "#"}
                    %small.text-primary More messages
                / END dropdown footer
              / END Dropdown menu
            / END Messages menu (dropdown-list)
            / START User avatar toggle
            %li
              / Button used to collapse the left sidebar. Only visible on tablet and desktops
              %a{"data-toggle-state" => "aside-user", :href => "#"}
                %em.fa.fa-user
            %li
              %a{'ng-controller' => 'SessionsController', :href => '', 'ng-click' => 'requestControl.sign_out()'}
                Sign Out
            / END User avatar toggle
          / END Left navbar
          / START Right Navbar
          %ul.nav.navbar-nav.navbar-right
            / Search icon
            %li
              %a{"data-toggle" => "navbar-search", :href => "#"}
                %em.fa.fa-search
            / Fullscreen
            %li
              %a{"data-toggle" => "fullscreen", :href => "#"}
                %em.fa.fa-expand
            / START Alert menu
            %li.dropdown.dropdown-list
              %a.dropdown-toggle{"data-play" => "flipInX", "data-toggle" => "dropdown", :href => "#"}
                %em.fa.fa-bell
                .label.label-danger 11
              / START Dropdown menu
              %ul.dropdown-menu
                %li
                  / START list group
                  .list-group
                    / list item
                    %a.list-group-item{:href => "#"}
                      .media
                        .pull-left
                          %em.fa.fa-twitter.fa-2x.text-info
                        .media-body.clearfix
                          %p.m0 New followers
                          %p.m0.text-muted
                            %small 1 new follower
                    / list item
                    %a.list-group-item{:href => "#"}
                      .media
                        .pull-left
                          %em.fa.fa-envelope.fa-2x.text-warning
                        .media-body.clearfix
                          %p.m0 New e-mails
                          %p.m0.text-muted
                            %small You have 10 new emails
                    / list item
                    %a.list-group-item{:href => "#"}
                      .media
                        .pull-left
                          %em.fa.fa-tasks.fa-2x.text-success
                        .media-body.clearfix
                          %p.m0 Pending Tasks
                          %p.m0.text-muted
                            %small 11 pending task
                    / last list item
                    %a.list-group-item{:href => "#"}
                      %small More notifications
                      %span.label.label-danger.pull-right 14
                  / END list group
              / END Dropdown menu
            / END Alert menu
            / START Contacts button
            %li
              %a{"data-toggle-state" => "offsidebar-open", :href => "#"}
                %em.fa.fa-group
            / END Contacts menu
          / END Right Navbar
        / END Nav wrapper
        / START Search form
        %form.navbar-form{:action => "search.html", :role => "search"}
          .form-group.has-feedback
            %input.form-control{:placeholder => "Type and hit Enter..", :type => "text"}
              .fa.fa-times.form-control-feedback{"data-toggle" => "navbar-search-dismiss"}
          %button.hidden.btn.btn-default{:type => "submit"} Submit
        / END Search form
      / END Top Navbar
      / START aside
      %aside.aside
        / START Sidebar (left)
        %nav.sidebar
          / START user info
          .item.user-block
            / User picture
            .user-block-picture
              .user-block-status
                %img.img-thumbnail.img-circle{:alt => "Avatar"}
                  .circle.circle-success.circle-lg
              / Status when collapsed
            / Name and Role
            .user-block-info
              %span.user-block-name.item-text Welcome User
              %span.user-block-role UX-Dev
          / END user info
          %ul.nav
            / START Menu
            %li.nav-heading Main navigation
            %li.active
              %a.no-submenu{"data-toggle" => "", :href => "index.html", :title => "Dashboard"}
                %em.fa.fa-dot-circle-o
                .label.label-primary.pull-right 10
                %span.item-text Dashboard
            %li
              %a.no-submenu{"data-toggle" => "", :href => "widgets.html", :title => "Widgets"}
                %em.fa.fa-cube
                %span.item-text Widgets
            %li
              %a.has-submenu{"data-toggle" => "collapse-next", :href => "#", :title => "Elements"}
                %em.fa.fa-flask
                %span.item-text Elements
              / START SubMenu item
              %ul.nav.collapse
