                  %a.no-submenu{"data-toggle" => "", :href => "grid-masonry.html", :title => "Grid Masonry"}
                    %span.item-text Grid Masonry
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "typo.html", :title => "Typography"}
                    %span.item-text Typography
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "icons.html", :title => "Icons"}
                    .label.label-primary.pull-right +400
                    %span.item-text Icons
              / END SubMenu item
            %li
              %a.has-submenu{"data-toggle" => "collapse-next", :href => "#", :title => "Forms"}
                %em.fa.fa-edit
                %span.item-text Forms
              / START SubMenu item
              %ul.nav.collapse
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "form-standard.html", :title => "Standard"}
                    %span.item-text Standard
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "form-extended.html", :title => "Extended"}
                    %span.item-text Extended
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "form-validation.html", :title => "Validation"}
                    %span.item-text Validation
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "form-wizard.html", :title => "Wizard"}
                    %span.item-text Wizard
              / END SubMenu item
            %li
              %a.has-submenu{"data-toggle" => "collapse-next", :href => "#", :title => "Charts"}
                %em.fa.fa-bar-chart-o
                %span.item-text Charts
              / START SubMenu item
              %ul.nav.collapse
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "chart-flot.html", :title => "Flot"}
                    %span.item-text Flot
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "chart-radial.html", :title => "Radial"}
                    %span.item-text Radial
              / END SubMenu item
            %li
              %a.has-submenu{"data-toggle" => "collapse-next", :href => "#", :title => "Tables"}
                %em.fa.fa-table
                %span.item-text Tables
              / START SubMenu item
              %ul.nav.collapse
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "table-standard.html", :title => "Standard"}
                    %span.item-text Standard
                %li
                  %a.no-submenu{"data-toggle" => "", :href => "table-extended.html", :title => "Extended"}
