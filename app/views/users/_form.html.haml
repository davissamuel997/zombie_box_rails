.row
  .content
    .col-md-12
      .panel
        .panel-body
          .viewcode-example
            %form.simple-form{:novalidate => "novalidate"}
              %fieldset
                %legend.section
                  %h5
                    %i.icon-note
                    %strong General
                    %strong.pull-right.make-red * Required
                .control-group{'ng-if' => 'requestControl.isEditing === false'}
                  %label.control-label.make-red Number Type
                  %select.form-control.input-sm{'ng-model' => 'requestControl.params.number_type', 'ng-options' => 'numberType.type for numberType in requestControl.numberTypes', 'data-placeholder' => 'Select a Number Type', :chosen => ''}
                    %option

                %br{'ng-if' => 'requestControl.isEditing === false'}

                .control-group{'ng-if' => 'requestControl.isEditing === false'}
                  %label.control-label.make-red Area Code
                  .controls.form-group
                    %input.form-control.input-sm{'ng-model' => 'requestControl.params.area_code', :type => 'text', :placeholder => 'Ex: 319'}

                .control-group
                  %label.control-label Redirect Number
                  .controls.form-group
                    %input.form-control.input-sm{'ng-model' => 'requestControl.params.redirect_number', :type => 'text', :placeholder => 'Ex: 4625556666'}

                .control-group
                  %label.control-label Phone Number Name
                  .controls.form-group
                    %input.form-control.input-sm{'ng-model' => 'requestControl.params.name', :type => 'text', :placeholder => 'Ex: Marketing Team'}

                .control-group
                  %label.label-control Country
                  .controls.form-group
                    %select.form-control.input-sm{'ng-model' => 'requestControl.selectedCountry', 'ng-options' => 'country.code as country.name for country in requestControl.countries', 'data-placeholder' => 'Select a country', :chosen => ''}
                      %option

                .control-group
                  %label.label-control Phone Number is Active?
                  %br
                  .input-group-btn
                    %button.btn.btn-success.btn-sm{'ng-if' => 'requestControl.params.active === true', 'ng-click' => 'requestControl.updateActive(true)'} Yes
                    %button.btn.btn-default.btn-sm{'ng-if' => 'requestControl.params.active === false', 'ng-click' => 'requestControl.updateActive(true)'} Yes
                    %button.btn.btn-default.btn-sm{'ng-if' => 'requestControl.params.active === true', 'ng-click' => 'requestControl.updateActive(false)'} No
                    %button.btn.btn-success.btn-sm{'ng-if' => 'requestControl.params.active === false', 'ng-click' => 'requestControl.updateActive(false)'} No

              %br

              %fieldset
                %legend.section
                  %h5
                    %i.icon-pencil
                    %strong Campaign
                .control-group
                  %label.control-label.make-red Name
                  .controls.form-group
                    %input.form-control{'ng-model' => 'requestControl.params.campaign_name', :type => 'text', :placeholder => 'Ex: My Campaign Name'}

              .form-actions
                %p
                  .btn-group.no-margin{style: "float: right;"}
                    %button.btn.btn-sm.btn-default{"ng-click" => "requestControl.cancel()"} Cancel
                    %button.btn.btn-sm.btn-success{"ng-click" => "requestControl.paramsVerify()", 'ng-if' => 'requestControl.isEditing === false'} Create Phone Number
                    %button.btn.btn-sm.btn-success{"ng-click" => "requestControl.updatePhoneNumber()", 'ng-if' => 'requestControl.isEditing === true'} Update Phone Number

            %div{'ng-if' => 'loaderControl.isLoading === true'}
              .loader-css
                .load-container.load8
                  .loader
                    Loading...
                %h5 Creating Phone Number...

